<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.DetailActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/background"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background" />

        <ImageView
            android:id="@+id/pic_agent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="230dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/mini_pic_agent" />

        <TextView
            android:id="@+id/tv_name_agent"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="305dp"
            android:text="@string/nama_agent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/loveButton"
            android:layout_below="@id/background"
            android:layout_toEndOf="@+id/tv_name_agent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_favorite_border_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/action_share"
            android:layout_marginStart="5dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/ic_baseline_share_24"
            android:layout_below="@+id/background"
            android:layout_toEndOf="@+id/loveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/jenis_agent"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="15sp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="335dp"
            android:text="@string/jenis_agent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtSkill"
            android:layout_below="@+id/pic_agent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="@string/skills"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <HorizontalScrollView
            android:id="@+id/horizontal_sc"
            android:layout_below="@+id/txtSkill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/pic_skill_one"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/skill_agent" />
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/text_skill_one"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="Tailwind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/pic_skill_two"
                    android:layout_toEndOf="@+id/pic_skill_one"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/skill_agent" />
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/text_skill_two"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="Tailwind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/pic_skill_three"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/skill_agent" />
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/text_skill_three"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="Tailwind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/pic_ult"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/skill_agent" />
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="10dp"
                    android:paddingEnd="20dp"
                    android:id="@+id/text_ult"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="Tailwind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tv_Desc"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="@string/desc"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_below="@+id/horizontal_sc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="sans-serif-black"
            android:id="@+id/txtDesc"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:layout_below="@+id/tv_Desc"
            android:text="Desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>




</ScrollView>